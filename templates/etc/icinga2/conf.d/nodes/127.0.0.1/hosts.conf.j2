object Host "localhost" {
  import "generic-host"
  address = "127.0.0.1"
  vars.os = "Linux"

  vars.services["ssh"] = {
      command = "ssh"
      port    = 22
  }

  vars.disks["disk /"] = {
    disk_partitions = "/"
  }

  vars.notification["mail"] = {
    groups = [ "hostmasters" ]
  }
}

