object Host "localhost.localdomain" {
  import "generic-host"
  address = "127.0.0.1"
  vars.os = "Linux"
  vars.ssh_port = 22

  vars.http_hosts["127.0.0.1"] = {
    http_vhost     = "127.0.0.1"
    http_uri       = "/"
  }

  vars.disks["disk /"] = {
    disk_partitions = "/"
  }

  vars.notification["mail"] = {
    groups = [ "hostmasters" ]
  }
}

